mixin modal(id,title,text)
	.modal.fade(id='#{id}' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
		| &gt;
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					h5.modal-title
						#{title}
					button.close(type='button' data-dismiss='modal' aria-label='Close')
						span(aria-hidden='true') &times;
				.modal-body
					p
						#{text}
				.modal-footer
					button.btn.btn-secondary(type='button' data-dismiss='modal') Close